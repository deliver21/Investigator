@model IEnumerable<TemplateTag>
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@{
    ViewData["Title"] = "Tags";
}
<div class="card shadow border-0 mb-3">
    <div class="card-header bg-primary bg-gradient ml-0">
        <div class="row">
            <div class="col-4"></div>
            <div class="col-lg-4 col-sm-6 text-center pt-2">
                <h3 class="text-white">@localizer["Tagslist"]</h3> 
            </div>
            <div class="col-lg-4 col-sm-6 text-end pt-2">
                <a asp-controller="Tag" asp-action="Upsert" class="btn btn-dark rounded-1">
                    <i class="bi bi-plus-circle"></i>  @localizer["Createtag"]
                </a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <table id="tblData" class="table table-bordered table-striped table-hover" style="width:100%; overflow:auto">
            <thead>
                <tr>
                    <th>@localizer["Tagname"]</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
    <script src ="~/js/tag.js"></script>
}