@model TemplateTag
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@{
    ViewData["title"] = "Edit tag";
}
<div class="card shadow border-0 mb-5 mt-5 pt-2">
    <div class="card-header bg-primary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white">@(Model != null ? localizer["Updatetag"] : localizer["Createtag"])</h2>
            </div>
        </div>        
    </div>
     <div class="card-body pt-4">
         <div class="edit-container">
            <form method="post" class="row">
                <div class="border p-3 mt-4">
                    <div asp-validation-summary="All" class="text-danger-emphasis"></div>
                    <input asp-for="TagId" type="hidden" />
                    <div class="mb-3 form-floating col-12 bg-white">
                        <input asp-for="TagName" class="form-control border-0 shadow ps-lg-2" />
                        <label asp-for="TagName" class="p-0"></label>
                        <span asp-validation-for="TagName" class="text-danger"></span>
                    </div>
                    <div class="row pt-2">
                        <div class="col-3 col-md-3">
                            <button type="submit" class="btn btn-info rounded-1" style="width:150px">
                                @(Model != null ? localizer["Update"] : localizer["Create"])
                            </button>
                        </div>
                        <div class="col-6"></div>
                        <div class="col-3 col-md-3 text-end">
                            <a asp-controller="Tag" asp-action="Index" class="btn btn-primary rounded-1">
                                @localizer["Backtolist"]
                            </a>
                        </div>
                    </div>
                </div>
            </form>
         </div>
        
     </div>
</div>


@section Scripts
    {
        <partial name="_ValidationScriptsPartial" />
}